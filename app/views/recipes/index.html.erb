<h1>Recipe Index</h1>

<table>
  <thead>
    <th>title</th>
    <th>description</th>
    <th>ingredients</th>
    <th>instructions</th>
    <th>photo</th>
    <th>view</th>
    <th>edit</th>
    <th>delete</th>
  </thead>
  <tbody>
    <% @recipes.each do |recipe| %>
    <tr>
      <td>CHEF: <%=  %></td>
      <td>TITLE: <%= recipe.description %></td>
      <td>DESCRIPTION: <%= recipe.cook_time %></td>
      <td>INGREDIENTS: <%= recipe.ingredients %></td>
      <td>INSTRUCTIONS: <%= recipe.instructions %></td>
      <td><%= image_tag(recipe.picture, size: '40x30') %></td>
      <td><%= link_to('view', recipe_path(recipe.id)) %></td>
      <td><%= link_to('edit', edit_recipe_path(recipe.id)) %></td>
      <td><%= link_to('delete', recipe_path(recipe.id), method: :delete, confirm: 'Are you really sure???') %></td>
    </tr>
    <% end %>
  </tbody>
</table>